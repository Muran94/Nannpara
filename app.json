{
  "name": "Nannpara",
  "scripts": {
    "postdeploy": "bundle exec rails db:seed_fu RAILS_ENV=staging",
    "pr-predestroy": "bundle exec rails db:drop RAILS_ENV=staging"
  },
  "env": {
    "DEPLOY_TASKS": {
      "required": true
    },
    "LANG": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_LOG_TO_STDOUT": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "REDIS_URL": {
      "required": true
    },
    "S3_ACCESS_KEY": {
      "required": true
    },
    "S3_BUCKET": {
      "required": true
    },
    "S3_REGION": {
      "required": true
    },
    "S3_SECRET_KEY": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true
    }
  },
  "formation": {
    "worker": {
      "quantity": 1
    },
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "pointdns",
    "heroku-postgresql",
    "heroku-redis",
    "scheduler"
  ],
  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-ruby"
    },
    {
      "url": "https://github.com/heroku/heroku-buildpack-chromedriver"
    },
    {
      "url": "https://github.com/heroku/heroku-buildpack-google-chrome"
    },
    {
      "url": "https://github.com/gunpowderlabs/buildpack-ruby-rake-deploy-tasks"
    }
  ],
  "environments": {
    "test": {
      "addons": [
        "heroku-postgresql",
        "heroku-redis"
      ],
      "buildpacks": [
        {
          "url": "https://github.com/heroku/heroku-buildpack-ruby"
        },
        {
          "url": "https://github.com/heroku/heroku-buildpack-google-chrome"
        },
        {
          "url": "https://github.com/heroku/heroku-buildpack-chromedriver"
        }
      ]
    }
  }
}
